    ~/.config/bspwm/scripts/ws_hold.sh 4 press & ~/.config/bspwm/scripts/ws_goto.sh 4
super + @4
    ~/.config/bspwm/scripts/ws_hold.sh 4 release

super + 5
    ~/.config/bspwm/scripts/ws_hold.sh 5 press & ~/.config/bspwm/scripts/ws_goto.sh 5
super + @5
    ~/.config/bspwm/scripts/ws_hold.sh 5 release

super + 6
    ~/.config/bspwm/scripts/ws_hold.sh 6 press & ~/.config/bspwm/scripts/ws_goto.sh 6
super + @6
    ~/.config/bspwm/scripts/ws_hold.sh 6 release

super + 7
    ~/.config/bspwm/scripts/ws_hold.sh 7 press & ~/.config/bspwm/scripts/ws_goto.sh 7
super + @7
    ~/.config/bspwm/scripts/ws_hold.sh 7 release

super + 8
    ~/.config/bspwm/scripts/ws_hold.sh 8 press & ~/.config/bspwm/scripts/ws_goto.sh 8
super + @8
    ~/.config/bspwm/scripts/ws_hold.sh 8 release

super + 9
    ~/.config/bspwm/scripts/ws_hold.sh 9 press & ~/.config/bspwm/scripts/ws_goto.sh 9
super + @9
    ~/.config/bspwm/scripts/ws_hold.sh 9 release

